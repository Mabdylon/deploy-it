<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <resource-env-ref>
        <res-ref-name>jdbc/deploy-it</res-ref-name>
        <res-ref-type>javax.sql.DataSource</res-ref-type>
        <res-auth>Container</res-auth>
        <param name="username">
            <value>${db.user}</value> 
        </param>
        <param name="password">
            <value>${db.pass}</value> 
        </param>
        <param name="url">
            <value>${db.url}</value> 
        </param>

        <!-- Connection Pool settings -->
        <param name="maxActive" value="5" />
        <param name="maxIdle" value="2" />
        <param name="maxWait" value="10000" />
        <param name="removeAbandoned" value="true" />
        <param name="removeAbandonedTimeout" value="60" />
        <param name="logAbandoned" value="true" />

        <!-- Avoid idle database timeouts (for low-usage apps) -->
        <param name="validationQuery" value="SELECT 1" />
        <param name="testOnBorrow" value="true" />
    </resource-env-ref>
    
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.mabdylon.whishlist.FirstServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>
</web-app>