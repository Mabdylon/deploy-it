<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <resource name="jdbc/whishlist" auth="Container" type="javax.sql.DataSource">
        <param name="username" value="DB_USER" />
        <param name="password" value="DB_PASSWORD" />
        <param name="url" value="DB_JDBC_URL" />

        <!-- Connection Pool settings -->
        <param name="maxActive" value="5" />
        <param name="maxIdle" value="2" />
        <param name="maxWait" value="10000" />
        <param name="removeAbandoned" value="true" />
        <param name="removeAbandonedTimeout" value="60" />
        <param name="logAbandoned" value="true" />

        <!-- Avoid idle database timeouts (for low-usage apps) -->
        <param name="validationQuery" value="SELECT 1" />
        <param name="testOnBorrow" value="true" />
    </resource>
    
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.mabdylon.whishlist.MAVEN_MAIN_SERVLET</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>
</web-app>